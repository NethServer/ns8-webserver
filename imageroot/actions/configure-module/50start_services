import os
import subprocess


subprocess.run(["systemctl", "--user", "enable","--now", "webserver.service"])
subprocess.run(["systemctl", "--user", "restart", "webserver.service"])


sftpgo_service = os.environ.get('SFTPGO_SERVICE', False)
if sftpgo_service:
    subprocess.run(["systemctl", "--user", "enable","--now", "sftpgo.service"])
    subprocess.run(["systemctl", "--user", "restart", "sftpgo.service"])
else:
    subprocess.run(["systemctl", "--user", "disable","--now", "sftpgo.service"])
