{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Get webserver configuration",
    "$id": "http://schema.nethserver.org/traefik/set-route-input.json",
    "description": "Get webserver configuration",
    "examples": [
        {
            "9001": {
                "PhpVersion": "7.4",
                "ServerNames": [
                    "toto.com",
                    "prout.com"
                ],
                "MemoryLimit": 512,
                "AllowUrlfOpen": "disabled",
                "UploadMaxFilesize": 4,
                "PostMaxSize": 8,
                "MaxExecutionTime": 0,
                "MaxFileUploads": 20,
                "port":9001
                }
        }
    ],
    "type": "object",
    "required": [
        "ServerNames",
        "PhpVersion",
        "MemoryLimit",
        "AllowUrlfOpen",
        "UploadMaxFilesize",
        "PostMaxSize",
        "MaxExecutionTime",
        "MaxFileUploads",
        "port"
    ],
    "properties": {
        "ServerNames": {
            "type": "array",
            "items": {
                "type": "string",
                "format": "hostname"
            },
            "title": "ServerNames",
            "description": "Fully qualified domain names as virtualhost."
        },
        "port": {
            "type": "integer",
            "minimum": 9001,
            "title": "port",
            "description": "The port of the phpfpm pool"
        },
        "PhpVersion": {
            "type": "string",
            "format": "regex",
            "pattern": "^(7.4|8.0|8.1)$",
            "title": "PhpVersion",
            "description": "Could be 7.4 or 8.0 or 8.1"
        },
        "MemoryLimit": {
            "type": "integer",
            "minimum": 32,
            "title": "MemoryLimit",
            "description": "The maximum of memory allowed to the php script"
        },
        "AllowUrlfOpen": {
            "type": "string",
            "format": "regex",
            "pattern": "^(enabled|disabled)$",
            "title": "AllowUrlfOpen",
            "description": "Turn off or on the AllowUrlfOpen"
        },
        "UploadMaxFilesize": {
            "type": "integer",
            "minimum": 4,
            "title": "UploadMaxFilesize",
            "description": "The maximum of UploadMaxFilesize allowed to the php script"
        },
        "PostMaxSize": {
            "type": "integer",
            "minimum": 8,
            "title": "PostMaxSize",
            "description": "The maximum of PostMaxSize allowed to the php script"
        },
        "MaxExecutionTime": {
            "type": "integer",
            "minimum": 0,
            "title": "MaxExecutionTime",
            "description": "The maximum of MaxExecutionTime allowed to the php script"
        },
        "MaxFileUploads": {
            "type": "integer",
            "minimum": 20,
            "title": "MaxFileUploads",
            "description": "The maximum of MaxFileUploads allowed to the php script"
        }
    }
}