import os
import glob
import configparser
import json

dir = '.config/conf.d/dyn-*'
for file in glob.iglob(dir, recursive=True):
    os.remove(file)

dir = '.config/php*-fpm-custom.d/dyn-*'
for file in glob.iglob(dir, recursive=True):
    os.remove(file)




path=".config/databases/vhosts/*"
for file in glob.iglob(path, recursive=True):
    config = configparser.ConfigParser()
    config.read(file)
    servernames = config['vhost']['servernames'].split(',')
    port = config['vhost']['port']
    phpversion = config['vhost']['phpversion']
    s = ' '

    properties = {
    "names": s.join(servernames),
    "rootFolder": servernames[0],
    "port": port,
    "phpversion": phpversion
    }

    json_properties = json.dumps(properties)

    vhost_path = "' > .config/conf.d/dyn-"+servernames[0]+".conf"
    cli_vhost = "/usr/local/bin/runagent  expand-template .config/templates/vhost-nginx.conf '" +json_properties+vhost_path
    os.system(cli_vhost)

    if phpversion:
        fpm_path = "' > .config/php"+phpversion+"-fpm-custom.d/dyn-"+servernames[0]+".conf"
        cli_fpm = "/usr/local/bin/runagent  expand-template .config/templates/php-fpm-pool.conf '" +json_properties+fpm_path
        os.system(cli_fpm)
