{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["local>NethServer/.github:ns8"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["php"],
      "matchPackagePatterns": [
        "php:7.4.*-fpm.*",
        "php:8.0.*-fpm.*",
        "php:8.1.*-fpm.*",
        "php:8.2.*-fpm.*",
        "php:8.3.*-fpm.*",
        "php:8.4.*-fpm.*"
      ],
      "allowedVersions": "7.4.x || 8.0.x || 8.1.x || 8.2.x || 8.3.x || 8.4.x",
      "rangeStrategy": "pin",
      "bumpTypes": ["patch"]
    }
  ]
}
